<ul class="cityList">
  <% cities.each do |city| %>
    <li class="cityItem">
      <span class="emoji">ðŸ‡ºðŸ‡¸</span>
      <h3 class="name"><%= link_to city.city_name, search_city_path(city) %></h3>
      <% if city.id.in?(@saved_cities.pluck(:id)) %>
        <%= button_to '-', remove_city_path(city), method: :delete, class: 'deleteBtn' %>
