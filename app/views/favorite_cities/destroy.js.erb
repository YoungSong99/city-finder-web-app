var FavoriteDeleteBtn = $("#favorite_<%= dom_id(@the_city) %>_btn");
var FavoriteDeleteItem = $("#favorite_<%= dom_id(@the_city) %>_item")

FavoriteDeleteBtn.replaceWith(
    '<%= button_to '+', favorite_cities_path(id: @the_city.id), method: :post, remote: true, data: { turbo: false }, class: 'deleteBtn custom-tooltip add' %>'
)

if ($("ul.favoriteCityList").length) {
    FavoriteDeleteItem.fadeOut(500)
}

window.location.reload();
