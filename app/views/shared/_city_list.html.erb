<ul class="cityList">
  <% cities.each do |city| %>
    <li class="cityItem" id="<%= dom_id(city) %>_item">
      <span class="emoji">ðŸ‡ºðŸ‡¸</span>
      <h3 class="name"><%= link_to city.city_name, city_path(city) %></h3>
      <div id="<%= dom_id(city) %>_btn">
        <% if user_signed_in? %>
          <% if current_user.favorite_cities.exists?(city_id: city.id) %>
            <%= button_to '-', remove_favorite_city_path(city), method: :delete, remote: true, data: { turbo: false }, class: 'deleteBtn' %>
          <% else %>
            <%= button_to '+', add_favorite_city_path(city), method: :post, remote: true, data: { turbo: false }, class: 'deleteBtn' %>
          <% end %>
        <% else %>
          <%= button_to '+', add_favorite_city_path(city), method: :post, remote: true, data: { turbo: false }, class: 'deleteBtn' %>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>