<div>
  <div>
    <h1>
      List of all school grades
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new school grade
    </h2>

    <form action="/insert_school_grade" method="post">
      <div>
        <label for="city_id_box">
          City
        </label>

        <input type="text" id="city_id_box" name="query_city_id">
      </div>

      <div>
        <label for="score_compared_to_us_box">
          Score compared to us
        </label>

        <input type="text" id="score_compared_to_us_box" name="query_score_compared_to_us">
      </div>

      <div>
        <label for="score_compared_to_il_box">
          Score compared to il
        </label>

        <input type="text" id="score_compared_to_il_box" name="query_score_compared_to_il">
      </div>

      <button>
        Create school grade
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          City
        </th>

        <th>
          Score compared to us
        </th>

        <th>
          Score compared to il
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_school_grades.each do |a_school_grade| %>
      <tr>
        <td>
          <%= a_school_grade.id %>
        </td>

        <td>
          <%= a_school_grade.city_id %>
        </td>

        <td>
          <%= a_school_grade.score_compared_to_us %>
        </td>

        <td>
          <%= a_school_grade.score_compared_to_il %>
        </td>

        <td>
          <%= time_ago_in_words(a_school_grade.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_school_grade.updated_at) %> ago
        </td>

        <td>
          <a href="/school_grades/<%= a_school_grade.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
