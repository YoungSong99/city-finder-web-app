<div class="app">
  <div class="sidebar">
    <a href="/"><img src="<%= asset_path('logo.png') %>" alt="CityFinder logo" class="logo"></a>
    <%= render 'shared/nav' %>
    <div class="row">
      <h1 class="sub-title">Compared Below Cities</h1>
      <div class="favorite-list">
        <%= render 'shared/city_list', cities: @cities %>
        <% unless user_signed_in? %>
          <div class="overlay">
            <div class="overlay-message">
              <i class="fa-solid fa-lock"></i><br>
              Login to unlock this feature
            </div>
          </div>
        <% end %>
      </div>
      <div class="buttons">
        <%= link_to 'Download To CSV', export_comparison_path(format: :csv),
                    class: "btn primary #{'inactive' unless user_signed_in?}",
                    disabled: !user_signed_in? %>
        <%= link_to 'Back', '#', class: 'btn back', onclick: 'window.history.back(); return false;' %>
      </div>
    </div>
    <%= render 'shared/footer' %>
  </div>
  <div class="data-div">
    <%= render 'comparison_graph' %>
    <%= render 'comparison_table' %>

    <% unless user_signed_in? %>
      <div class="overlay">
        <div class="overlay-message">
          <i class="fa-solid fa-lock"></i><br>
          Login to unlock this feature
        </div>
      </div>
    <% end %>

    <%= link_to 'Download To CSV', export_comparison_path(format: :csv), class: 'btn primary mobile' %>
  </div>
  <%= render 'shared/user_nav' %>
  <%= render 'shared/nav_mobile' %>
</div>