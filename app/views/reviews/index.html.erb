<h1>Reviews for <%= @city.city_name %></h1>

<%= link_to 'New Review', new_city_review_path(@city) %>

<table>
  <thead>
  <tr>
    <th>Pros</th>
    <th>Cons</th>
    <th>Ratings</th>
    <th>Recommend Family Type</th>
    <th>Zipcode</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @reviews.each do |review| %>
    <tr>
      <td><%= review.pros %></td>
      <td><%= review.cons %></td>
      <td><%= review.ratings %></td>
      <td><%= review.recommend_family_type %></td>
      <td><%= review.zipcode %></td>
      <td><%= link_to 'Show', city_review_path(@city, review) %></td>
      <td><%= link_to 'Edit', edit_review_path(review) %></td>
      <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Back', cities_path %>