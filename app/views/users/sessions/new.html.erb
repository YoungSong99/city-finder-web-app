<main class="login">
  <%= render 'shared/static_nav' %>
  <div class="form">
    <h1>Welcome to CityFinder ðŸ‘‹</h1>
    <div class="row">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row">
          <%= f.input :email,
                      required: false,
                       autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>
        <div class="row">
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="no-margin">
          <%= f.button :submit, "Log in", class: "btn primary" %>
          <%= link_to "Sign up", new_registration_path(resource_name), class: "btn back large" %>
        </div>
      <% end %>
      <div class="password">
        <%= link_to "Forgot your password?", new_password_path(resource_name) %>
      </div>
    </div>
  </div>

</main>
