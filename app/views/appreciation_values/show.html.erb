<div>
  <div>
    <h1>
      Appreciation value #<%= @the_appreciation_value.id %> details
    </h1>

    <div>
      <div>
        <a href="/appreciation_values">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_appreciation_value/<%= @the_appreciation_value.id %>">
          Delete appreciation value
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Latest quater
      </dt>
      <dd>
        <%= @the_appreciation_value.latest_quater %>
      </dd>

      <dt>
        Last 12months
      </dt>
      <dd>
        <%= @the_appreciation_value.last_12months %>
      </dd>

      <dt>
        Last 2years
      </dt>
      <dd>
        <%= @the_appreciation_value.last_2years %>
      </dd>

      <dt>
        Last 5years
      </dt>
      <dd>
        <%= @the_appreciation_value.last_5years %>
      </dd>

      <dt>
        Last 10years
      </dt>
      <dd>
        <%= @the_appreciation_value.last_10years %>
      </dd>

      <dt>
        Since 2000
      </dt>
      <dd>
        <%= @the_appreciation_value.since_2000 %>
      </dd>

      <dt>
        City
      </dt>
      <dd>
        <%= @the_appreciation_value.city_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_appreciation_value.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_appreciation_value.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit appreciation value
    </h2>

    <form action="/modify_appreciation_value/<%= @the_appreciation_value.id %>"  method="post" >
      <div>
        <label for="latest_quater_box">
          Latest quater
        </label>

        <input type="text" id="latest_quater_box" name="query_latest_quater" value="<%= @the_appreciation_value.latest_quater %>">
      </div>

      <div>
        <label for="last_12months_box">
          Last 12months
        </label>

        <input type="text" id="last_12months_box" name="query_last_12months" value="<%= @the_appreciation_value.last_12months %>">
      </div>

      <div>
        <label for="last_2years_box">
          Last 2years
        </label>

        <input type="text" id="last_2years_box" name="query_last_2years" value="<%= @the_appreciation_value.last_2years %>">
      </div>

      <div>
        <label for="last_5years_box">
          Last 5years
        </label>

        <input type="text" id="last_5years_box" name="query_last_5years" value="<%= @the_appreciation_value.last_5years %>">
      </div>

      <div>
        <label for="last_10years_box">
          Last 10years
        </label>

        <input type="text" id="last_10years_box" name="query_last_10years" value="<%= @the_appreciation_value.last_10years %>">
      </div>

      <div>
        <label for="since_2000_box">
          Since 2000
        </label>

        <input type="text" id="since_2000_box" name="query_since_2000" value="<%= @the_appreciation_value.since_2000 %>">
      </div>

      <div>
        <label for="city_id_box">
          City
        </label>

        <input type="text" id="city_id_box" name="query_city_id" value="<%= @the_appreciation_value.city_id %>">
      </div>

      <button>
        Update appreciation value
      </button>
    </form>
  </div>
</div>

<hr>
