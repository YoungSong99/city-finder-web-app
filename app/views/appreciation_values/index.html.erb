<div>
  <div>
    <h1>
      List of all appreciation values
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new appreciation value
    </h2>

    <form action="/insert_appreciation_value" method="post">
      <div>
        <label for="latest_quater_box">
          Latest quater
        </label>

        <input type="text" id="latest_quater_box" name="query_latest_quater">
      </div>

      <div>
        <label for="last_12months_box">
          Last 12months
        </label>

        <input type="text" id="last_12months_box" name="query_last_12months">
      </div>

      <div>
        <label for="last_2years_box">
          Last 2years
        </label>

        <input type="text" id="last_2years_box" name="query_last_2years">
      </div>

      <div>
        <label for="last_5years_box">
          Last 5years
        </label>

        <input type="text" id="last_5years_box" name="query_last_5years">
      </div>

      <div>
        <label for="last_10years_box">
          Last 10years
        </label>

        <input type="text" id="last_10years_box" name="query_last_10years">
      </div>

      <div>
        <label for="since_2000_box">
          Since 2000
        </label>

        <input type="text" id="since_2000_box" name="query_since_2000">
      </div>

      <div>
        <label for="city_id_box">
          City
        </label>

        <input type="text" id="city_id_box" name="query_city_id">
      </div>

      <button>
        Create appreciation value
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Latest quater
        </th>

        <th>
          Last 12months
        </th>

        <th>
          Last 2years
        </th>

        <th>
          Last 5years
        </th>

        <th>
          Last 10years
        </th>

        <th>
          Since 2000
        </th>

        <th>
          City
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_appreciation_values.each do |an_appreciation_value| %>
      <tr>
        <td>
          <%= an_appreciation_value.id %>
        </td>

        <td>
          <%= an_appreciation_value.latest_quater %>
        </td>

        <td>
          <%= an_appreciation_value.last_12months %>
        </td>

        <td>
          <%= an_appreciation_value.last_2years %>
        </td>

        <td>
          <%= an_appreciation_value.last_5years %>
        </td>

        <td>
          <%= an_appreciation_value.last_10years %>
        </td>

        <td>
          <%= an_appreciation_value.since_2000 %>
        </td>

        <td>
          <%= an_appreciation_value.city_id %>
        </td>

        <td>
          <%= time_ago_in_words(an_appreciation_value.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_appreciation_value.updated_at) %> ago
        </td>

        <td>
          <a href="/appreciation_values/<%= an_appreciation_value.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
